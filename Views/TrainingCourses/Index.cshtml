@model IEnumerable<TBADatalyticsSolutions.Models.TrainingCourse>

@{
    ViewData["Title"] = "Training Courses";
}

<h2 class="text-center text-primary mb-4">Training Courses</h2>
<div class="row">
    @foreach (var course in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@course.CourseTitle</h5>
                    <p class="card-text">@course.Description</p>
                    <ul class="list-unstyled">
                        <li><strong>Instructor:</strong> @course.Instructor</li>
                        <li><strong>Start:</strong> @course.StartDate.ToShortDateString()</li>
                        <li><strong>Duration:</strong> @course.DurationWeeks weeks</li>
                        <li><strong>Level:</strong> @course.Level</li>
                        <li><strong>Price:</strong> â‚¦@course.Price.ToString("N2")</li>
                    </ul>
                </div>
                <div class="card-footer bg-transparent border-top-0 d-flex justify-content-between">
                    <a class="btn btn-sm btn-primary" href="@Url.Action("Edit", new { id = course.Id })">Edit</a>
                    <a class="btn btn-sm btn-outline-danger" href="@Url.Action("Delete", new { id = course.Id })">Delete</a>
                </div>
            </div>
        </div>
    }
</div>
<a class="btn btn-success" href="@Url.Action("Create")">Add New Course</a>