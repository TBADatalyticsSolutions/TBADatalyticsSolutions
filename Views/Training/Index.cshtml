@model IEnumerable<TBADatalyticsSolutions.Models.TrainingCourse>

@{
    ViewData["Title"] = "Training Courses";
}

<h2>Available Training Courses</h2>
<table class="table">
    <thead>
        <tr>
            <th>Course Title</th>
            <th>Instructor</th>
            <th>Duration</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
@foreach (var course in Model)
{
    <tr>
        <td>@course.CourseTitle</td>
        <td>@course.Instructor</td>
        <td>@course.DurationWeeks</td>
        <td>@course.Description</td>
    </tr>
}
    </tbody>
</table>
